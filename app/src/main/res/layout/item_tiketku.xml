<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvTiketku"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:padding="20dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/viewTiket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/tvDayTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="TIKET PERTANDINGAN" />


        <TableLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imgHomeTeamTiket"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                tools:src="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvHomeTeamTiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="PERSIB BANDUNG" />
        </TableLayout>

        <TextView
            android:id="@+id/tvTimeTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDayTiket"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="VS"
            android:textColor="@color/colorAccent"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvStadionTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTimeTiket"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="10dp"
            android:text="LIHAT TIKET SAYA"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/imgAwayTeamTiket"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                tools:src="@color/colorAccent" />

            <TextView
                android:id="@+id/tvAwayTeamTiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="PERSIPURA JAYAPURA" />
        </TableLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
