<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aripratom.gblaticketingapp.ui.tiketku.TiketkuDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTiketku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="10dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:id="@+id/viewTiket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">


                <TextView
                    android:id="@+id/tvDayTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="SENIN" />

                <TextView
                    android:id="@+id/tvDateTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDayTiket"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="TANGGAL" />

                <TableLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/imgHomeTeamTiket"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        tools:src="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvHomeTeamTiket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="PERSIB BANDUNG" />
                </TableLayout>

                <TextView
                    android:id="@+id/tvTimeTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDateTiket"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="17:30" />

                <TextView
                    android:id="@+id/tvStadionTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTimeTiket"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/stadion_gbla_bandung"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp">

                    <ImageView
                        android:id="@+id/imgAwayTeamTiket"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        tools:src="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tvAwayTeamTiket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="PERSIPURA JAYAPURA" />
                </TableLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/RV_iconKursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_event_seat_black_24dp" />


                    <TextView
                        android:id="@+id/tvKursiTiketku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_image"
                        android:text="A01"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@id/RV_iconKursi">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_league" />


                    <TextView
                        android:id="@+id/tvNameMatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/image"
                        android:gravity="center_vertical"
                        android:text="Persib Bandung Vs Persiraja Banda Aceh"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />


                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/RV_iconRfid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/icon_rfid"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/rfid" />


                    <TextView
                        android:id="@+id/tvStatusTiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_rfid"
                        android:layout_centerInParent="true"
                        android:text="RFID Belum Terdaftar"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:padding="20dp"
            app:cardCornerRadius="4dp">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/kursi">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="DETAIL TIKET"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/silver"
                        android:text="ID TRANSAKSI"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/idTransaksiTiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="1234567890123456789012345"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/silver"
                        android:text="EMAIL"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/emailTiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="ariapratomo@gmail.com"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/silver"
                        android:text="PERTANDINGAN"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/pertandinganTiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="PERSIB BANDUNG VS PERSELA LAMONGAN"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </TableLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/silver"
                        android:text="KATEGORI TRIBUN"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="VIP BARAT"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@color/silver"
                        android:text="TEMPAT DUDUK"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/noKursiTiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="A01"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableLayout>


            </TableLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:padding="20dp"
            app:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/TnC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/syarat_dan_ketentuan"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mohonDibaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TnC"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/mohon_dibaca_dengan_seksama_e_voucher_ini_tidak_dapat_diperjualbelikan_hati_hati_terhadap_penipuan"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titik1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/satu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/titik1"
                android:gravity="start"
                android:text="@string/e_tiket_ini_adalah_tiket_anda_yang_sah"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/satu"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/satu"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/titik2"
                android:gravity="start"
                android:text="@string/wajib_membawa_menunjukan_dan_menscan_kartu_member_di_pintu_stadion_dan_jika_diwakilkan_wajib_membawa_surat_kuasa"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dua"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dua"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik3"
                android:gravity="start"
                android:text="@string/e_tiket_tidak_akan_berlaku_jika_anda_tidak_membawa_kartu_member_anda"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiga"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/empat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tiga"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik4"
                android:gravity="start"
                android:text="@string/e_tiket_ini_berlaku_sebagai_bukti_anda_membeli_tiket_dan_berguna_untuk_mencari_kursi_anda_di_stadion"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empat"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empat"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik5"
                android:gravity="start"
                android:text="@string/e_tiket_yang_sudah_dibeli_tidak_dapat_ditukar_atau_diuangkan_kembali"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lima"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lima"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik6"
                android:gravity="start"
                android:text="@string/kami_tidak_bertanggung_jawab_atas_kehilangan_e_ticket_ini"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enam"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tujuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enam"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik7"
                android:gravity="start"
                android:text="@string/pemalsuan_e_tiket_adalah_tindakan_illegal_dan_akan_ditindak_secara_hukum"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/titik8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tujuh"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tujuh"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik8"
                android:gravity="start"
                android:text="@string/dilarang_membawa_dan_menggunakan_segala_jenis_obat_obatan_terlarang"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delapan"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sembilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/delapan"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik9"
                android:gravity="start"
                android:text="@string/dilarang_membawa_segala_jenis_senjata_api_maupun_senjata_tajam"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/titik10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sembilan"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_poin"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sepuluh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sembilan"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/titik10"
                android:gravity="start"
                android:text="@string/penyelenggara_berhak_untuk_tidak_memberikan_izin_untuk_masuk_ke_dalam_stadion_apabila_syarat_dan_ketentuan_tidak_dipenuhi"
                android:textColor="@color/black" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>